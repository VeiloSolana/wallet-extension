{
  "manifest_version": 3,
  "name": "Veilo - Privacy layer on solana",
  "version": "1.0.0",
  "description": "Perform private transactions and interactions on the Solana blockchain.",
  "icons": {
    "16": "images/logo-main.png",
    "32": "images/logo-main.png",
    "48": "images/logo-main.png",
    "128": "images/logo-main.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
